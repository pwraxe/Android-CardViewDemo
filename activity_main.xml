                    android:layout_height="24dp"
                    android:text="Computer Engineering"
                    android:background="#FFFFFF"
                    android:onClick="showDept"
                    android:layout_below="@id/fe_image2"
                    android:textSize="10sp"
                    />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

